{
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "module": "es2022",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "types": ["vite/client"]
  }
}
